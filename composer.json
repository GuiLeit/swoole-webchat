{
    "name": "swoole-webchat",
    "description": "Real-time WebSocket chat application built with Swoole",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "swoole/swoole": "^4.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "mockery/mockery": "^1.6",
        "phpunit/php-code-coverage": "^12.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "LeitGCastro",
            "email": "guiadse@gmail.com"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "test:feature": "phpunit --testsuite Feature"
    }
}
